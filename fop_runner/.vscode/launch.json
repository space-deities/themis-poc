    "version": "0.2.0",
    "configurations": [
        

        {
            "name": "FOP Runner: Step-by-step",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/work"
                }
            ],
            "justMyCode": false,
            "redirectOutput": true
        }
    ]
}